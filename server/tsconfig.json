{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware/*": ["src/middleware/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"],
      "@app": ["src/index.ts"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*", "types/*"],
  "exclude": ["node_modules"]
}
